<main>
  <%= form_for(@plan) do |f| %>
    <div class="container" style="padding-left: 0px;padding-right: 0px;">
    <br>
    <h2 class="border-line">PLAN概要</h2>
      <div id="main_box" class="form-summary">
        <div id="summary_box">
      	  <div class="card">
      		  <div class="card-body">
              <div class="form-group">
                <%= f.label :都道府県名または国名を記入して下さい%><br />
                <%= f.text_field :word,placeholder:"検索ワード" %>
              </div>
              <div class="form-group">
                <%= f.text_field :title,placeholder:"プランタイトル" %>
              </div>
              <div class="form-group">
                <%= f.text_area :introduction,placeholder:"内容(リンクなど)",:style=>"width:500px;" %>
              </div>
              <div class="form-group">
                <%= f.label :旅行予定日 %><br />
                <%= raw sprintf(f.date_select(:date, prompt:"--", use_month_numbers: true,date_separator:'%s'),'年','月')+'日' %>
              </div>
	          </div>
      	  </div>
        </div>
      </div>
    </div>
    <br>
      <h2 class="border-line">スケジュール</h2>
       <%= f.nested_fields_for :plan_dates, wrapper_tag: :div do |q| %>
          <div id="schedule_box" class="form-summary" onedaybox-cnt="1">
            <div id="oneday_box" class="form-summary card">
              <div id="card_header">
                <div class="form-group">  
                </div>
                  <div id="card_box">
                    <div id="card" class="card">
                      <div class="card-body">
                        <div class="form-group">
                          <%= q.label :時間 %><br />
                          <%= q.time_select :time, prompt:"--", ignore_data:true %>
                        </div>
                        <div class="form-group">
                          <%= q.text_field :place_name,placeholder:"場所名",:style=>"width:500px;" %>
                        </div>
                        <div class="form-group">
                          <%= q.text_field :place_introduction,placeholder:"メモ書き",:style=>"width:500px;" %>
                        </div>
                        <div class="form-group">
                          <%= q.text_field :price,placeholder:"予算",:style=>"width:500px;" %>
                        </div>
                        <div class="form-group">
                          <%= q.label :お好きな写真 %><br />
                          <%= q.attachment_field :image %>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="add">
          <%= f.remove_nested_fields_link 'Delete', class: 'btn btn-danger', role: 'button' %>
          <%= f.add_nested_fields_link :plan_dates, 'Add new', class: 'btn btn-primary', role: 'button' %>
        </div>
      </div>
      <%= f.submit "新規登録", class: " btn btn-sucess",:style=>"width:200px;margin-left: 620px;" %>
    </div>
    <% end %>
</main>
