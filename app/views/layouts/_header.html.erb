<div class = "top" >
  <div class="d-flex justify-content-center"> 
    <p>ようこそtravel_plusへ</p>
  </div>
</div> 
  <div class = "under" >   
      <% if user_signed_in? %>
        <div class="home">
          <%= link_to  "  Home", root_path, class: "home glyphicon glyphicon-home" %>
          <%= link_to " logout", destroy_user_session_path, method: :delete, :class => "glyphicon glyphicon-log-out" %>
          <%= link_to  "マイページ", user_path(current_user), class: "home glyphicon glyphicon-home" %>
        </div>
      <% else %>
        <div class="sign">
          <%= link_to "  Sign Up", new_user_registration_path, class: "sign_up glyphicon glyphicon-edit" %>
          <%= link_to "  login", new_user_session_path, class: "sign_in glyphicon glyphicon-log-in" %>
          <%= link_to "plan一覧", plans_path, class: "sign_in glyphicon glyphicon-log-in" %>
        </div>
      <% end %>
  </div>
<div class="kensaku">
  <div class="search-form">
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'search[content]' %>
      <%= select_tag 'search[model]', options_for_select({ "都道府県入力" => "plan" }) %>
      <%= select_tag 'search[method]', options_for_select({"部分一致" => "partial" }) %>
      <%= submit_tag 'search' %>
    <% end %>
  </div>
</div>
   
 
  